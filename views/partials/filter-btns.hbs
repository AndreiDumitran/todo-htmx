<div class="flex flex-col mt-10">
  <div class="flex">
    {{#each filters}}
      <a
          class="border-2 border-indigo-800 p-4 rounded-lg w-1/2 uppercase font-bold transition-all hover:bg-purple-500 mr-2 hover:scale-105 text-center cursor-pointer {{#ifEqual @root.filter this}} bg-purple-500 {{/ifEqual}}"
        href="/?filter={{this}}"
        hx-boost="true"
      >{{this}}</a>
    {{/each}}
  </div>
</div>
